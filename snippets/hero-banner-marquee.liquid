{% assign marquee_text = marquee_text | default: 'SHUFFLE ESSENTIALS' %}
{% assign icon_size = icon_size | default: 50 %}
<div class="hero-banner-marquee">
    <div class="marquee marquee--primary">
        <div class="marquee__content marquee__content--slow">
            {% for i in (1..10) %}
                <span class="hero-banner-marquee__text">{{ marquee_text }}</span>
                <svg class="hero-banner-marquee__separator" width="{{ icon_size }}" height="{{ icon_size }}" viewBox="-50 -50 100 100" xmlns="http://www.w3.org/2000/svg">
                    <path d="M 0,-40 C 12,-12 12,-12 40,0 C 12,12 12,12 0,40 C -12,12 -12,12 -40,0 C -12,-12 -12,-12 0,-40 Z"/>
                </svg>
            {% endfor %}
        </div>
    </div>
</div>